    body 
        .background0
        section#Experience.changePage
            .title#extitle(onload="letter2(this.id)")
                h1.ml61
                    span.text-wrapper1
                        span.letters1 工作經驗
            .exCon#job
                .job(v-for="(job, id) in jobs.slice()" v-bind:id="job.company[1]")
                    h4.floatup {{job.company[0]}}
                    h3.floatup {{job.position}}
                    img.jobImg(:src="job.url" @click="popupEx(job.company[1])")
                    .ExperiencePopUp.changePage
                        .popRow.popTitle
                            h1 {{job.company[0]}} / {{job.date}}
                            h1.text.ml61
                                span.text-wrapper1
                                    span.letters1 {{job.position}}
                        .popRow
                            .popBlock
                                h4.popText {{job.discription}}
                        .popRow
                            .popBlock(v-for="(info,id) in job.moreinfos")
                                img.popImg(:src="info") 
                        iframe(v-if="job.link" :src="job.link", frameborder="0") 
                        .popRow 
                            .popTool(v-for="(tool,id) in job.tools") {{tool}}
                        .back(@click="popcloseEx(job.company[1])") Back
            
            .link 
                a.linkBox#linkBox21(onmouseover="letter(this.id)" href="indexCh.html")
