                        .item {{skill.item}}
                        .percentage {{skill.percentage}}%
            .skillRow 
                h1.skillS Soft<br>Ware
                .skillB#soft
                    .skill(v-for = "(skill, id) in skills")
                        .skillbar(:style="{width: skill.percentage-20+'%'}")
                            .empbar
                        .item {{skill.item}}
                        .percentage {{skill.percentage}}%
            .skillRow 
                h1.skillS English<br>Ability
                .skillB#eng
                    .skill(v-for = "(skill, id) in skills")
                        .skillbar(:style="{width: skill.percentage-20+'%'}")
                            .empbar
                        .item {{skill.item}}
                        .percentage {{skill.percentage}}%
                    .skill
                        .skillbar(style="width:100%")
                            .empbar.blank
