    body 
        section#Skill.changePage
            .title#extitle(onload="letter2(this.id)")
                h1.ml61
                    span.text-wrapper1
                        span.letters1 Skills
            .skillgbox
                .skillgenre
                    h3 Program-ming
                .skillgenre
                    h3 Front-end
                .skillgenre
                    h3 Design
                .skillgenre
                    h3 Digital Art
            .skillRow 
                h1.skillS Programming<br>Languages
                .skillB#program 
                    .skill(v-for = "(skill, id) in skills")
                        .skillbar(:style="{width: skill.percentage-20+'%'}")
                            .empbar
                        .item {{skill.item}}
                        .percentage {{skill.percentage}}%
            .skillRow 
                h1.skillS Programming<br>Tools
                .skillB#skill
                    .skill(v-for = "(skill, id) in skills")
                        .skillbar(:style="{width: skill.percentage-20+'%'}")
